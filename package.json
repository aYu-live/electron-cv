{
  "name": "electron-cv",
  "version": "0.1.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "build:renderer": "vite build",
    "build": "yarn build:renderer && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@zxing/browser": "^0.1.5",
    "element-plus": "^2.13.1",
    "vue": "^3.5.26",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.example.electroncv",
    "productName": "ElectronCV",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
