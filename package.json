{
  "name": "electron-cv",
  "version": "0.1.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && electron-builder",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:mac:x64": "npm run build:renderer && electron-builder --mac --x64",
    "build:mac:arm64": "npm run build:renderer && electron-builder --mac --arm64",
    "build:mac:universal": "npm run build:renderer && electron-builder --mac universal",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:all": "npm run build:renderer && electron-builder --mac --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@zxing/browser": "^0.1.5",
    "@zxing/library": "^0.21.3",
    "element-plus": "^2.13.1",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.3",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.example.electroncv",
    "productName": "ElectronCV",
    "protocols": {
      "name": "ElectronCV",
      "schemes": ["app"]
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "此应用需要访问摄像头以识别条形码和录制视频",
        "NSMicrophoneUsageDescription": "此应用需要访问麦克风以录制音频（可选）"
      },
      "type": "distribution"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    }
  }
}
